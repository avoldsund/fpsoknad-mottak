<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="net.logstash.logback.encoder.LogstashEncoder" />
	</appender>
	<springProfile name="dev">
		<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} %X{Nav-CallId} [%thread] %-5level %logger{70} - %msg%n
				</Pattern>
			</layout>
		</appender>
	</springProfile>
	<root level="info">
		<appender-ref ref="stdout" />
	</root>
     <springProfile name="dev,preprod">
        <logger name="org.springframework.web.client" level="trace" />
        <logger name="no.nav.security.spring" level="info" />
         <logger name="org.apache.http" level="trace" />
    </springProfile>
</configuration>